    .stats-card {
      border-radius: 15px;
      box-shadow: 0 4px 20px rgba(0,0,0,0.1);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      border: none;
      overflow: hidden;
    }
    
    .stats-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 30px rgba(0,0,0,0.15);
    }
    
    .stats-icon {
      width: 60px;
      height: 60px;
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 24px;
    }
    
    .stats-number {
      font-size: 2rem;
      font-weight: 700;
      margin-bottom: 5px;
    }
    
    .stats-label {
      font-size: 0.875rem;
      color: #6c757d;
      font-weight: 500;
    }
    
    .search-form {
      background: white;
      padding: 25px;
      border-radius: 15px;
      box-shadow: 0 4px 20px rgba(0,0,0,0.08);
      margin-bottom: 30px;
    }
    
    .search-form .form-control {
      border-radius: 8px;
      border: 1px solid #e9ecef;
      padding: 12px 15px;
      transition: all 0.3s ease;
    }
    
    .search-form .form-control:focus {
      border-color: #5e72e4;
      box-shadow: 0 0 0 0.2rem rgba(94, 114, 228, 0.25);
    }
    
    .btn-search {
      background: linear-gradient(135deg, #5e72e4 0%, #825ee4 100%);
      border: none;
      border-radius: 8px;
      padding: 12px 25px;
      font-weight: 600;
      transition: all 0.3s ease;
    }
    
    .btn-search:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(94, 114, 228, 0.4);
    }
    
    .btn-print {
      background: linear-gradient(135deg, #f5365c 0%, #f56565 100%);
      color: white;
      border: none;
      border-radius: 8px;
      padding: 12px 25px;
      font-weight: 600;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 8px;
      transition: all 0.3s ease;
    }
    
    .btn-print:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(245, 54, 92, 0.4);
      color: white;
      text-decoration: none;
    }
    
    .page-title {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      font-size: 2rem;
      font-weight: 700;
      margin-bottom: 10px;
    }
    
    .breadcrumb-custom {
      background: rgba(255,255,255,0.1);
      backdrop-filter: blur(10px);
      border-radius: 25px;
      padding: 8px 20px;
    }
    
    .revenue-highlight {
      background: linear-gradient(135deg, #11cdef 0%, #1171ef 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    
    .completed-highlight {
      background: linear-gradient(135deg, #2dce89 0%, #2dcecc 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    
    .pending-highlight {
      background: linear-gradient(135deg, #fb6340 0%, #fbb140 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    
    .canceled-highlight {
      background: linear-gradient(135deg, #f5365c 0%, #f56565 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    
    @media (max-width: 768px) {
      .search-form {
        padding: 20px 15px;
      }
      
      .stats-number {
        font-size: 1.5rem;
      }
      
      .search-form .row > div {
        margin-bottom: 15px;
      }
    }
